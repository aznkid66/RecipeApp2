<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.patrick.recipeapp2" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme"
        android:logo="@drawable/ic_logo"
        android:label="@string/app_name">

        <activity
            android:name=".MainActivity"
            android:logo="@drawable/ic_logo"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchResultsActivity"
            android:label="@string/title_activity_search_results"
            android:parentActivityName=".MainActivity" >
        </activity>

        <activity
            android:name=".WebpageActivity"
            android:label="@string/title_activity_webpage"
            android:parentActivityName=".SearchResultsActivity" >
        </activity>
        <!--<provider-->
            <!--android:authorities="com.example.patrick.recipeapp2"-->
            <!--android:name=".data.RecipeProvider" />-->
    </application>

</manifest>
